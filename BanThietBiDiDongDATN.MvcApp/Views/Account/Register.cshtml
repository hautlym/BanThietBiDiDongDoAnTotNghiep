@using BanThietBiDiDongDATN.Application.Catalog.System.Dtos;
@model RegisterRequest

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    function displaySelectedImage(event, elementId) {
        const selectedImage = document.getElementById(elementId);
        const fileInput = event.target;

        if (fileInput.files && fileInput.files[0]) {
            const reader = new FileReader();

            reader.onload = function (e) {
                selectedImage.src = e.target.result;
            };

            reader.readAsDataURL(fileInput.files[0]);
        }
    }
</script>
<div class="regeiter-content" style="margin: 0 100px ">
    <div class="title-login">ĐĂNG KÝ TÀI KHOẢN</div>
    <div class="regeiter-form row justify-content-center">
        <form class="form-valide d-flex flex-wrap" asp-action="Register" enctype="multipart/form-data" method="post" style="min-width:900px;">
            <!--Avatar-->
            <div class="col-lg-3 col-md-4 col-12">
                <div class="d-flex justify-content-center mb-2">
                    <img id="selectedAvatar" src="https://mdbootstrap.com/img/Photos/Others/placeholder-avatar.jpg"
                         class="rounded" style="width: 150px; height: 150px; object-fit: cover;" alt="example placeholder" />
                </div>
                <div class="d-flex justify-content-center">
                    <div>
                        <label class=" btn btn-info btn-rounded form-label text-white m-1" for="customFile2"><i class="fa-regular fa-image" style="color: #ffffff;"></i>  Chọn ảnh</label>
                        <input type="file" asp-for="Avatar" class="form-control d-none" id="customFile2" onchange="displaySelectedImage(event, 'selectedAvatar')" />
                    </div>
                </div>
            </div>
            <div class="form-validation col-lg-9 col-md-8 col-12">
                <div class="form-group row is-invalid">
                    <label class="col-lg-3 col-form-label" for="val-username">
                        Username <span class="text-danger">*</span>
                    </label>
                    <div class="col-lg-7">
                        <input type="text" asp-for="Username" class="form-control" id="val-username" placeholder="Nhập username.." aria-required="true" aria-describedby="val-username-error" aria-invalid="true">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row is-invalid">
                    <label class="col-lg-3 col-form-label" for="val-email">
                        Email <span class="text-danger">*</span>
                    </label>
                    <div class="col-lg-7">
                        <input type="text" asp-for="Email" class="form-control" id="val-email" placeholder="Nhập email.." aria-required="true" aria-describedby="val-email-error">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row is-invalid">
                    <label class="col-lg-3 col-form-label" for="val-password">
                        Mật khẩu <span class="text-danger">*</span>
                    </label>
                    <div class="col-lg-7">
                        <input type="password" asp-for="Password" class="form-control" id="val-password" placeholder="Nhập mật khẩu.." aria-required="true" aria-describedby="val-password-error">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row is-invalid">
                    <label class="col-lg-3 col-form-label" for="val-confirm-password">
                        Nhập lại mật khẩu <span class="text-danger">*</span>
                    </label>
                    <div class="col-lg-7">
                        <input type="password" asp-for="ConfirmPassword" class="form-control" id="val-confirm-password" placeholder="Nhập lại mật khẩu..." aria-required="true" aria-describedby="val-confirm-password-error">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row is-invalid">
                    <label class="col-lg-3 col-form-label" for="val-website">
                        Họ và tên<span class="text-danger">*</span>
                    </label>
                    <div class="col-lg-7 d-flex justify-content-between">
                        <div>
                            <input type="text" asp-for="FirstName" class="form-control " id="val-website" placeholder="Nhập họ..." aria-required="true" aria-describedby="val-website-error">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div>
                            <input type="text" asp-for="LastName" class="form-control " id="val-website" placeholder="Nhập tên ..." aria-required="true" aria-describedby="val-website-error">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group row is-invalid">
                    <label class="col-lg-3 col-form-label" for="val-website">
                        Ngày sinh <span class="text-danger">*</span>
                    </label>
                    <div class="col-lg-7">
                        <input type="date" name="Dob" class="form-control">
                    </div>
                </div>
                <div class="form-group row is-invalid">
                    <label class="col-lg-3 col-form-label" for="val-website">
                        Địa chỉ <span class="text-danger">*</span>
                    </label>
                    <div class="col-lg-7">
                        <input type="text" asp-for="Address" class="form-control" id="val-website" placeholder="Nhập địa chỉ..." aria-required="true" aria-describedby="val-website-error">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row is-invalid">
                    <label class="col-lg-3 col-form-label" for="val-website">
                        Giới tính <span class="text-danger">*</span>
                    </label>
                    <div class="col-lg-7 d-flex align-items-center">
                        <label class=" mx-3">
                            <input type="radio" asp-for="Gender" value="true"  checked> Nam
                        </label>
                        <label>
                            <input type="radio" asp-for="Gender" value="false" > Nữ
                        </label>
                    </div>
                </div>
                <div class="form-group row is-invalid">
                    <label class="col-lg-3 col-form-label" for="val-phoneus">
                        Số điện thoại <span class="text-danger">*</span>
                    </label>
                    <div class="col-lg-7">
                        <input type="text" asp-for="PhoneNumber" class="form-control" id="val-phoneus" placeholder="Nhập số điện thoại.." aria-required="true" aria-describedby="val-phoneus-error">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                @* <div class="form-group row is-invalid">
                <label class="col-lg-4 col-form-label" for="val-phoneus">
                Quyền <span class="text-danger">*</span>
                </label>
                <div class="col-lg-6">
                <input type="text" asp-for="PhoneNumber" class="form-control" id="val-phoneus" placeholder="Nhập số điện thoại.." aria-required="true" aria-describedby="val-phoneus-error">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                </div> *@
                <div class="form-group row">
                    <div class="col-lg-10 ml-auto">
                        <button type="submit" class="btn btn-primary">Thêm người dùng</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <a href="@Url.Action("Login","Account")" class="link-login">Đăng nhập</a>
</div>

