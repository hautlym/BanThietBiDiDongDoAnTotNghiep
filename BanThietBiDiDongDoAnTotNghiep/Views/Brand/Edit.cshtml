@model BanThietBiDiDongDATN.Application.Catalog.Brands.Dtos.UpdateBrandRequest
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration


<div class="bootstrap-modal" style="display: inline-block">
    <div data-toggle="modal" data-target="#exampleModal@{
        @Model.id
        ;
    }" data-whatever="@@mdo">
        <a href="#" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit">
            <i class="fa fa-pencil color-muted m-r-5 mx-2" style="height:16px;width:16px;"></i>
        </a>
    </div>
    <style>
        .card-title {
            font-size: 14px;
            font-weight: 500;
            line-height: 14px;
        }
    </style>
    <div class="modal fade" id="exampleModal@{
                                    @Model.id
;
    }" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document" style="max-width:600px;">

            <form asp-action="Edit" enctype="multipart/form-data" data-ajax-method="POST" data-ajax="true" data-ajax-update="UpdateRoleForm" data-ajax-complete="OnComplete">
                @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Sửa thương hiệu</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body d-flex flex-wrap" id="UpdateRoleForm">
                        <div class="col-lg-3 col-md-4 col-12">
                            <div class="d-flex justify-content-center mb-2">
                                @if (!String.IsNullOrEmpty(Model.ImgLogo))
                                {
                                    <img id="selectedImage@{

                                    @Model.id
                                     }" src="@Configuration["BaseAddress"]/user-content/brand/@Model.ImgLogo"
                                         class="rounded" style="width: 150px; height: 150px; object-fit: cover;" alt="example placeholder" />
                                }
                                else
                                {
                                    <img id="selectedImage@{

                                        @Model.id
                                     }" src="https://mdbootstrap.com/img/Photos/Others/placeholder-avatar.jpg"
                                         class="rounded" style="width: 150px; height: 150px; object-fit: cover;" alt="example placeholder" />
                                }
                            </div>
                            <div class="d-flex justify-content-center">
                                <div>
                                    <label class="btn btn-info btn-rounded form-label text-white m-1" for="customFile@{

                                        @Model.id
                                     }"><i class="fa-regular fa-image" style="color: #ffffff;"></i>  Chọn ảnh</label>
                                    <input type="file" asp-for="logo" class="form-control d-none" id="customFile@{

                                        @Model.id
                                     }" onchange="displaySelectedImage(event, 'selectedImage@{

                                            @Model.id
                                     }')" />
                                </div>
                            </div>
                            <input type="hidden" asp-for="id" />
                        </div>
                        <div class="col-lg-9 col-md-8 col-12">
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">Tên thương hiệu:</label>
                                <input asp-for="BrandName" type="text" class="form-control rounded my-1" id="recipient-name">
                                <span asp-validation-for="BrandName" class="text-danger fs-5 mt-1"></span>
                            </div>
                            <div class="form-group">
                                <label for="message-text" class="col-form-label">Mô tả:</label>
                                <textarea asp-for="description" class="form-control rounded my-1" id="message-text"></textarea>
                                <span asp-validation-for="description" class="text-danger fs-5 mt-1"></span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary">Sửa thương hiệu</button>
                    </div>
            </form>
        </div>
    </div>
</div>
</div>
