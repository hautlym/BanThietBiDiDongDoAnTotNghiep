@model BanThietBiDiDongDATN.Application.Catalog.Brands.Dtos.CreateBrandRequest

<div class="bootstrap-modal" style="display: inline-block">
    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModal" data-whatever="@@mdo">
        <i class="fa-solid fa-plus" style="color: #ffffff;"></i>
        Thêm thương hiệu
    </button>
    <style>
        .card-title {
            font-size: 14px;
            font-weight: 500;
            line-height: 14px;
        }
    </style>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document" style="max-width:600px">

            <form asp-action="Create" enctype="multipart/form-data" data-ajax-method="POST" data-ajax="true" data-ajax-update="CreateRoleForm" data-ajax-complete="OnComplete">
                @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Thêm thương hiệu</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body d-flex flex-wrap" id="CreateRoleForm">
                        <div class="col-lg-3 col-md-4 col-12 ">
                            <div class="d-flex justify-content-center mb-2">
                                <img id="selectedAvatar" src="https://mdbootstrap.com/img/Photos/Others/placeholder-avatar.jpg"
                                     class="rounded" style="width: 150px; height: 150px; object-fit: cover;" alt="example placeholder" />
                            </div>
                            <div class="d-flex justify-content-center">
                                <div>
                                    <label class=" btn btn-info btn-rounded form-label text-white m-1" for="customFile2"><i class="fa-regular fa-image" style="color: #ffffff;"></i>  Chọn ảnh</label>
                                    <input type="file" asp-for="logo" class="form-control d-none" id="customFile2" onchange="displaySelectedImage(event, 'selectedAvatar')" />
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-9 col-md-8 col-12">
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">Tên thương hiệu:</label>
                                <input asp-for="BrandName" type="text" class="form-control rounded my-1" id="recipient-name">
                                <span asp-validation-for="BrandName" class="text-danger fs-5 mt-1"></span>
                            </div>
                            <div class="form-group">
                                <label for="message-text" class="col-form-label">Mô tả:</label>
                                <textarea asp-for="description" class="form-control rounded my-1" id="message-text"></textarea>
                                <span asp-validation-for="description" class="text-danger fs-5 mt-1"></span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary">Thêm thương hiệu</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


