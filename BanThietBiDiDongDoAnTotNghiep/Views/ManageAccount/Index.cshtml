@using BanThietBiDiDongDATN.Application.Catalog.System.Dtos;
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@model UserViewModels
@{
    ViewData["Title"] = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<div class="container-fluid">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <h4 class="mt-4">@ViewData["Title"]</h4>
        <ol class="breadcrumb bg-white">
            <li class="breadcrumb-item"><a href="#"><i class="fa-solid fa-house"></i> Trang chủ</a></li>
            <li class="breadcrumb-item active text-dark" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
    <div class="row">

        <div class="col-lg-5 col-xl-4">
            <div class="card">
                <div class="card-body">
                    <div class="media align-items-center mb-4">
                        <img class="mr-3 rounded-circle" src="@Configuration["BaseAddress"]/user-content/user/@Model.Avatar" width="80" height="80" alt="">
                        <div class="media-body">
                            <h3 class="mb-0">@Model.FirstName @Model.LastName</h3>
                        </div>
                    </div>

                    <h4>About Me</h4>
                    <p class="text-muted">Hi, I'm Pikamy, has been the industry standard dummy text ever since the 1500s.</p>
                    <ul class="card-profile__info">
                        <li class="mb-1"><strong class="text-dark mr-4">Vai trò</strong> <span>@Model.Roles.FirstOrDefault()</span></li>
                        <li class="mb-1"><strong class="text-dark mr-4">Điện thoại</strong> <span>@Model.PhoneNumber</span></li>
                        <li><strong class="text-dark mr-4">Email</strong> <span>@Model.Email</span></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-7 col-xl-8">
            <div>
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                            <a class="btn btn-info mr-1" asp-action="ChangePassword"><i class="fa-solid fa-key" style="color: #ffffff; width:16px; height:16px;"></i> 
                                <span>Đổi mật khẩu</span>
                            </a>
                        </h4>
                        <!-- Nav tabs -->
                        <div class="custom-tab-1">
                            <ul class="nav nav-tabs mb-3">
                                <li class="nav-item">
                                    <a class="nav-link active show" data-toggle="tab" href="#home1">Thông tin chi tiết</a>
                                </li>
                               
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#contact1">Thông tin mua bán</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane fade active show" id="home1" role="tabpanel">
                                    <div class="p-t-15">
                                        <div class="table-responsive">
                                            <table class="table table-striped">
                                                <tbody>
                                                    <tr>
                                                        <th>Họ tên</th>
                                                        <td>@Model.FirstName  @Model.LastName</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Giới tính</th>
                                                        <td>
                                                            @if (Model.Gender == "0")
                                                            {
                                                                <span>Nữ</span>
                                                            }
                                                            else
                                                            {
                                                                <span>Nam</span>
                                                            }
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>Ngày sinh</th>
                                                        <td>@Model.Dob</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Địa chỉ</th>
                                                        <td>@Model.Address</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Số điện thoại</th>
                                                        <td>@Model.PhoneNumber</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Email</th>
                                                        <td>@Model.Email</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Vai trò</th>
                                                        <td>@Model.Roles.FirstOrDefault()</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Ngày đăng kí</th>
                                                        <td>@Model.CreateAt</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Ngày sủa đổi</th>
                                                        <td>@Model.UpdateAt</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Lần đăng nhập cuối</th>
                                                        <td>@Model.LastSignIn</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="contact1">
                                    <div class="p-t-15">
                                        <h4>This is contact title</h4>
                                        <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts. Separated they live in Bookmarksgrove.</p>
                                        <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts. Separated they live in Bookmarksgrove.</p>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>