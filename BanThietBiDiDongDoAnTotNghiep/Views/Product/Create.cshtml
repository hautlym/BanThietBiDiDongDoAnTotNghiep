                                        <input type="file" asp-for="productImg2" class="form-control d-none" id="customFile2" onchange="displaySelectedImage(event, 'selectedAvatar2')" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3 col-12 ">
