@using BanThietBiDiDongDATN.Application.Catalog.Vouchers.Dtos;
@model CreateVoucherRequest
<div class="bootstrap-modal" style="display: inline-block">
    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModal" data-whatever="@@mdo">
        <i class="fa-solid fa-plus" style="color: #ffffff;"></i>
        Thêm voucher
    </button>
    <style>
        .card-title {
            font-size: 14px;
            font-weight: 500;
            line-height: 14px;
        }

        .form-group {
            margin-bottom: 5px;
        }
    </style>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">

            <form asp-action="Create" data-ajax-method="POST" data-ajax="true" data-ajax-update="CreateRoleForm" data-ajax-complete="OnComplete">
                @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Thêm voucher</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body" id="CreateRoleForm">

                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Tên Voucher:</label>
                            <input asp-for="VoucherName" type="text" class="form-control rounded my-1" id="recipient-name">
                            <span asp-validation-for="VoucherName" class="text-danger fs-5 mt-1"></span>
                        </div>
                        <div class="form-group">
                            <label for="message-text" class="col-form-label">Mã Voucher:</label>
                            <input asp-for="VoucherCode" class="form-control rounded my-1" id="message-text"></input>
                            <span asp-validation-for="VoucherCode" class="text-danger fs-5 mt-1"></span>
                        </div>
                        <div class="form-group">
                            <label for="message-text" class="col-form-label">Số lượng:</label>
                            <input asp-for="Quantity" class="form-control rounded my-1" type="number" value="1"  id="message-text"></input>
                            <span asp-validation-for="Quantity" class="text-danger fs-5 mt-1"></span>
                        </div>
                        <div class="form-group">
                            <label for="message-text" class="col-form-label">Giảm giá:</label>
                            <input asp-for="Discount" class="form-control rounded my-1" type="number" value="1"   id="message-text"></input>
                            <span asp-validation-for="Discount" class="text-danger fs-5 mt-1"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <div class="example">
                                    <label for="recipient-name" class="col-form-label">Ngày bắt đầu:</label>
                                    <input name="BeginDate" class="form-control "  type="date">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="example">
                                    <label for="recipient-name" class="col-form-label">Ngày kết thúc:</label>
                                    <input type="date" name="ExpiredDate" class="form-control ">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary">Thêm voucher</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
